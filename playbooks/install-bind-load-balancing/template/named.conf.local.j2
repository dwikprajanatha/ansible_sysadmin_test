zone "gianyarkab.com" IN { // Domain name
    
      type master; // Primary DNS

     file "/etc/bind/forward.gianyarkab.com"; // Forward lookup file

     allow-update { none; }; // Since this is the primary DNS, it should be none.

};

zone "1.168.192.in-addr.arpa" IN { //Reverse lookup name, should match your network in reverse order

     type master; // Primary DNS

     file "/etc/bind/reverse.gianyarkab.com"; //Reverse lookup file

     allow-update { none; }; //Since this is the primary DNS, it should be none.

};